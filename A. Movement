import java.util.*;
class TestClass {
    public static void main(String args[] ) throws Exception {
        // Write your code here
        Scanner s = new Scanner(System.in);
        
        int n = s.nextInt();
        
        int d = n/5;
        
        if(n%5==0)
        System.out.println(d);
        
        else
        System.out.println(d+1);
 
    }
}
